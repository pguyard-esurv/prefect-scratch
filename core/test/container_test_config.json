{
  "test_description": "Container Test Framework Configuration",
  "version": "1.0.0",
  
  "distributed_processing_tests": {
    "flow_name": "container_validation_flow",
    "record_count": 100,
    "container_count": 3,
    "batch_size": 10
  },
  
  "performance_tests": {
    "target_throughput": 50,
    "performance_duration": 60,
    "performance_containers": 2
  },
  
  "fault_tolerance_tests": {
    "fault_scenarios": [
      "container_crash",
      "database_connection_loss",
      "network_partition",
      "resource_exhaustion",
      "concurrent_failures"
    ]
  },
  
  "integration_tests": {
    "integration_workflows": [
      "complete_processing_workflow",
      "multi_container_coordination",
      "health_monitoring_integration",
      "configuration_management_integration"
    ]
  },
  
  "validation_thresholds": {
    "min_throughput_per_second": 20,
    "max_latency_ms": 3000,
    "max_error_rate_percent": 3.0,
    "min_resource_efficiency_percent": 75.0,
    "max_recovery_time_seconds": 120
  },
  
  "test_environment": {
    "enable_performance_monitoring": true,
    "enable_structured_logging": true,
    "enable_prometheus_metrics": true,
    "cleanup_after_tests": true
  },
  
  "reporting": {
    "include_detailed_metrics": true,
    "include_error_details": true,
    "include_recommendations": true,
    "generate_summary_only": false
  }
}