{
  "rpa1-worker": {
    "replicas": 2,
    "rolling_update_config": {
      "update_parallelism": 1,
      "update_delay": "10s",
      "update_failure_action": "rollback",
      "update_monitor": "30s"
    },
    "health_check_config": {
      "test": ["CMD", "curl", "-f", "http://localhost:8000/health"],
      "interval": "30s",
      "timeout": "10s",
      "retries": 3,
      "start_period": "60s"
    },
    "environment_variables": {
      "CONTAINER_FLOW_NAME": "rpa1",
      "CONTAINER_LOG_LEVEL": "INFO",
      "CONTAINER_METRICS_ENABLED": "true",
      "CONTAINER_HEALTH_CHECK_ENABLED": "true"
    },
    "resource_limits": {
      "cpu_limit": "1.0",
      "memory_limit": "512M",
      "cpu_reservation": "0.5",
      "memory_reservation": "256M"
    },
    "rollback_enabled": true,
    "max_rollback_attempts": 3
  },
