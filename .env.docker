# Docker Compose Environment Configuration
# Container Testing System - Environment Variables

# Environment Configuration
ENVIRONMENT=development

# Database Configuration
POSTGRES_PASSWORD=rpa_dev_password_secure_123
POSTGRES_PORT=5432
PREFECT_DB_PASSWORD=prefect_dev_password_secure_789

# External SurveyHub Database (SQL Server)
# Configure this to point to your external SQL Server instance
SURVEYHUB_CONNECTION_STRING=mssql+pyodbc://username:password@server:port/database?driver=ODBC+Driver+17+for+SQL+Server

# Prefect Server Configuration
PREFECT_PORT=4200

# Monitoring Configuration
PROMETHEUS_PORT=9090

# Flow-Specific Configuration
# RPA1 Settings (File Processing)
RPA1_BATCH_SIZE=25
RPA1_MAX_RETRIES=3
RPA1_TIMEOUT=300

# RPA2 Settings (Data Validation)
RPA2_BATCH_SIZE=75
RPA2_MAX_RETRIES=4
RPA2_TIMEOUT=600

# RPA3 Settings (Concurrent Processing)
RPA3_BATCH_SIZE=150
RPA3_MAX_RETRIES=3
RPA3_TIMEOUT=180
RPA3_CONCURRENT_WORKERS=4

# Container Resource Configuration
CONTAINER_MEMORY_LIMIT_RPA1=512M
CONTAINER_MEMORY_LIMIT_RPA2=384M
CONTAINER_MEMORY_LIMIT_RPA3=768M
CONTAINER_CPU_LIMIT_RPA1=0.5
CONTAINER_CPU_LIMIT_RPA2=0.4
CONTAINER_CPU_LIMIT_RPA3=0.75

# Development Configuration
COMPOSE_PROJECT_NAME=rpa-container-testing
COMPOSE_FILE=docker-compose.yml
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_RETENTION_DAYS=7

# Security Configuration
POSTGRES_INITDB_ARGS=--auth-host=scram-sha-256
CONTAINER_USER_ID=1000
CONTAINER_GROUP_ID=1000